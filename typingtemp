  color: #fff;
  font-size: 30px;
  font-weight: 400;
}
/*margin-left: puts a 15px gap between static and dynamic text*/
/*line-height: creates a rectangle that houses the dynamic font - color blue*/
/*height: shrinks LINE_HEIGHT rectanlge to the font size*/
/*overflow: hides whatever doesnt fit in HEIGHT's rectanlge*/
.wrapper .dynamic-txts{
	margin-left: 10px; 
	height: 40px;
	line-height: 50px;
	/*background: blue;*/
	overflow: hidden;
	
}

/*establishes attributes for cycling text*/
.dynamic-txts li{
	color: peachpuff;
	list-style: none;
	font-size: 30px;
	font-weight: 500;
	position: relative;
	top: 0;
	animation: shiftup 9.15s steps(3) infinite;
}
/*top: positive numbers push it down; in order to get the words to show up properly, adjust the spacing between .dynamic-txt li TOP and keyframes shiftup TOP*/
@keyframes shiftup{
	100%{
		top: -150px;
		/*background: lime;*/
	}
}
/*position relative: makes the courser stick to the end of the word*/
.dynamic-txts li span{
	position: relative;
	
}
/*border-left: 2px solid;: creates the courser line*/
.dynamic-txts li span::after{
	content: "";
	position: absolute;
	left: 0; /*puts courser infront of words*/
	height: 100%; /*courser height, relative to words*/
	width: 100%; /*courser width, relative to words*/
	border-left: 2px solid;
	background: #343F4F; /*covers the letters*/
	animation: typing 3s steps(13) infinite;
}

